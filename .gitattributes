# normalize line endings
* text=auto

# python / docs
*.py  text eol=lf
*.md  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# windows scripts
*.ps1 text eol=crlf

*.md text eol=lf
*.py text eol=lf
*.ps1 text eol=lf


# Enforce LF for source files
*.ts   text eol=lf
*.tsx  text eol=lf
*.js   text eol=lf
*.jsx  text eol=lf
*.ps1  text eol=lf
*.md   text eol=lf
